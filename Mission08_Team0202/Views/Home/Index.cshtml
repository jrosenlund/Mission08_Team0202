@{
    ViewData["Title"] = "Task Manager";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Time Management Matrix</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .matrix-container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            grid-gap: 8px;
            max-width: 600px;
            margin: auto;
            text-align: center;
        }

        .matrix-section {
            border: 1px solid #000;
            padding: 20px;
        }

        .important {
            background-color: #FFFFA8; /* Light yellow */
        }

        .urgent {
            border-bottom: 1px solid #000;
        }

        .not-urgent {
            border-top: 1px solid #000;
        }

        .quadrant {
            min-height: 150px; /* Adjust height as needed */
        }

        .quadrant-header {
            font-weight: bold;
        }

        h2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <h2>Stephen Covey's Time Management Matrix</h2>
    <div class="matrix-container">
        <!-- Quadrant 1 -->
        <div class="matrix-section important urgent">
            <div class="quadrant-header">Quadrant 1</div>
            <div class="quadrant">Crises<br>Pressing Problems<br>Projects with Deadlines</div>
        </div>
        <!-- Quadrant 2 -->
        <div class="matrix-section important not-urgent">
            <div class="quadrant-header">Quadrant 2</div>
            <div class="quadrant">Relationship Building<br>Planning<br>Recreation</div>
        </div>
        <!-- Quadrant 3 -->
        <div class="matrix-section not-important urgent">
            <div class="quadrant-header">Quadrant 3</div>
            <div class="quadrant">Interruptions<br>Some Phone Calls<br>Some Mail<br>Some Reports</div>
        </div>
        <!-- Quadrant 4 -->
        <div class="matrix-section not-important not-urgent">
            <div class="quadrant-header">Quadrant 4</div>
            <div class="quadrant">Busy Work<br>Some Phone Calls<br>Some Mail<br>Time Wasters</div>
        </div>
    </div>
</body>
</html>
