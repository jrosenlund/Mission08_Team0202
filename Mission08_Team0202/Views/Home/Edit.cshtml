@using TaskModel = Mission08_Team0202.Models.Task;
@model TaskModel

@{
    ViewData["Title"] = "Edit Task";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2>@ViewData["Title"]</h2>

        <form asp-action="EditTask" method="post">
            <input type="hidden" asp-for="TaskId" />

            <div class="form-group">
                <label asp-for="Task1">Task</label>
                <input asp-for="Task1" class="form-control" required />
            </div>

            <div class="form-group">
                <label asp-for="DueDate">Due Date</label>
                <input asp-for="DueDate" class="form-control" type="date" />
            </div>

            <div class="form-group">
                <label asp-for="Quadrant">Quadrant</label>
                <input asp-for="Quadrant" class="form-control" type="number" required />
            </div>

            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" required class="form-control"></select>
            </div>

            <div class="form-group form-check">
                <input asp-for="Completed" class="form-check-input" type="checkbox" />
                <label asp-for="Completed" class="form-check-label">Completed</label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>

        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</body>
</html>

