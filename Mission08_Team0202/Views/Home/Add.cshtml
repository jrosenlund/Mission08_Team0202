@using TaskModel = Mission08_Team0202.Models.Tasks;
@model TaskModel

@{
    ViewData["Title"] = "Add Task";
}

@section Styles {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    <h2>Create Task</h2>

    <form asp-action="Add" method="post">
        <div class="form-group">
            <label asp-for="Task">Task</label>
            <input asp-for="Task" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="DueDate">Due Date</label>
            <input asp-for="DueDate" class="form-control" type="date" />
        </div>

        <div class="form-group">
            <label asp-for="Quadrant">Quadrant</label>
            <input asp-for="Quadrant" class="form-control" type="number" required />
        </div>

        <div class="form-group">
            <label asp-for="CategoryId">Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.Categories" required class="form-control"></select>
        </div>

        <div class="form-group form-check">
            <input asp-for="Completed" class="form-check-input" type="checkbox" />
            <label asp-for="Completed" class="form-check-label">Completed</label>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Add Task</button>
        </div>
    </form>
</div>



